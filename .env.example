# QuickServe Legal - Environment Variables
# Copy this file to .env and fill in your values

# Security (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-me

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/quickserve.db

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@quickservelegal.co.za
SMTP_FROM_NAME=QuickServe Legal

# Application URL (change for production)
BASE_URL=http://localhost:8000

# Debug mode (set to False in production)
DEBUG=True

# LAWTrust AES Integration (Phase 7)
LAWTRUST_API_URL=https://api.lawtrust.co.za/aes/v1
LAWTRUST_API_KEY=
LAWTRUST_API_SECRET=
LAWTRUST_MOCK_MODE=True

# SendGrid Email Delivery (Phase 8)
SENDGRID_API_KEY=
SENDGRID_WEBHOOK_SECRET=
EMAIL_PROVIDER=smtp

# PNSA Branch Integration (Phase 9)
PNSA_ENABLED=False
PNSA_SERVICE_FEE=50.00
PNSA_SESSION_EXPIRE_MINUTES=480

# OCR Document Extraction (Phase 9)
OCR_ENABLED=False
ANTHROPIC_API_KEY=
OCR_MAX_PAGES=3
OCR_CONFIDENCE_THRESHOLD=0.7
